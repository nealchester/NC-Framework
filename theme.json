{
	"$schema": "https://schemas.wp.org/wp/6.5/theme.json",
	"version": 2,
	"settings": {

		"appearanceTools": true,

		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},

		"color": {
			"defaultPalette": true,
			"defaultGradients": true,
			"defaultDuotone": true,
			"background": true,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"link": true,
			"text": true,
			"palette": [
				{
					"name": "Black",
					"slug": "black",
					"color": "#000000"
				},
				{
					"name": "White",
					"slug": "white",
					"color": "#ffffff"
				},
				{
					"name": "Smoke",
					"slug": "smoke",
					"color": "var(--gray)"
				}
			]
		},

		"layout": {
			"contentSize": "var(--width-standard)",
			"wideSize": "var(--width-wide)"
		},

		"blocks": {
			"core/image": {
				"lightbox": {
					"enabled": true,
					"allowEditing": true
				}
			}
		},

		"position": {
			"sticky": true
		},

		"shadow": {
			"defaultPresets": true,
			"presets": [
				{
					"name": "Theme",
					"slug": "theme",
					"shadow": "var(--shadows)"
				}
			]
		},

		"spacing": {
			"blockGap": true,
			"customSpacingSize": true,
			"margin": true,
			"padding": true,
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			},
			"spacingSizes": [],
			"units": ["px", "em", "rem", "vh", "vw", "vmin", "vmax", "%"]
		},

		"typography": {
			"customFontSize": true,
			"dropCap": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": false,
			"textColumns": true,
			"textDecoration": false,
			"textTransform": true,
			"writingMode": false,
			"fontSizes": [
				{
					"slug": "tiny",
					"size": "var(--txt-xsmall)",
					"name": "Tiny"
				},
				{
					"slug": "small",
					"size": "var(--txt-small)",
					"name": "Small / H6"
				},
				{
					"slug": "normal",
					"size": "var(--txt-base)",
					"name": "Normal / H5"
				},
				{
					"slug": "medium",
					"size": "var(--txt-medium)",
					"name": "Medium / H4"
				},
				{
					"slug": "large",
					"size": "var(--txt-large)",
					"name": "Large / H3"
				},
				{
					"slug": "x-large",
					"size": "var(--txt-xlarge)",
					"name": "X-Large / H2"
				},
				{
					"slug": "xx-large",
					"size": "var(--txt-xxlarge)",
					"name": "XX-Large / H1"
				},
				{
					"slug": "huge",
					"size": "var(--txt-xxxlarge)",
					"name": "Huge"
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "var(--sans)",
					"slug": "primary",
					"name": "Primary"
				},
				{
					"fontFamily": "var(--serif)",
					"slug": "secondary",
					"name": "Secondary"
				},
				{
					"fontFamily": "var(--mono)",
					"slug": "mono",
					"name": "Mono"
				}
			]
		}

	},

	"styles": {
		"typography": {
			"fontSize": "var(--txt-base)",
			"fontFamily": "var(--sans)",
			"lineHeight": "1.5"
		},
		"spacing": {
			"blockGap": "var(--gap)",
			"margin": {
				"top": "0px",
				"right": "0px",
				"bottom": "var(--gap)",
				"left": "0px"
			}
		}
	}
}